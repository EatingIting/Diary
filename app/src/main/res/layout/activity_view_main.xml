<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.diary.Activity.ViewMainActivity">

    <TextView
        android:id="@+id/title_veiwmainacitivity"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:text="제목"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/content_viewmainactivity"
        android:layout_width="match_parent"
        android:layout_height="369dp"
        android:text="내용"
        android:textSize="20dp" />

<!--    <TextView-->
<!--        android:id="@+id/time_viewmainactivity"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="현재 시각 : "-->
<!--        android:textSize="15dp" />-->

    <TextView
        android:id="@+id/weather_viewmainactivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="날씨"
        android:textSize="18dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/updatebtn_viewmainactivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:onClick="onButton1Clicked"
            android:layout_weight="1"
            android:text="수정하기" />
        <Button
            android:id="@+id/deletebtn_viewmainactivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:onClick="onButton3Clicked"
            android:text="삭제하기"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/returnbtn_viewmainactivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:onClick="onButton2Clicked"
            android:text="메인화면으로 돌아가기"/>
    </LinearLayout>
</LinearLayout>
